{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
    <div class="ui text container container-login">
        <div class="ui two column centered grid">
            <div class="column">
                <h1 class="ui huge header">Log in</h1>

                {% if error is defined %}
                    <div class="ui error message">
                        <div class="header">The username and password you entered did not match our records. Please double-check and try again.</div>
                    </div>
                {% endif %}

                <form class="ui form" method="post">
                    <div class="ui grid">
                        <div class="sixteen wide column">
                            <div class="field">
                                <input type="email" name="email" placeholder="Email" autofocus>
                            </div>
                        </div>
                        <div class="sixteen wide column">
                            <div class="field">
                                <input type="password" name="password" placeholder="Password">
                            </div>
                        </div>
                        <div class="nine wide column">
                            <div class="field">
                                <div class="ui checkbox">
                                    <input type="checkbox" name="rememberMe" id="remember-me" class="hidden" />
                                    <label for="remember-me">Remember me</label>
                                </div>
                            </div>
                        </div>
                        <div class="seven wide column">
                            <span class="ui">No account? <a href="/signup">Sign up</a></span>
                        </div>
                        <div class="sixteen wide column">
                            <button class="ui primary fluid button" type="submit">Log in</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
