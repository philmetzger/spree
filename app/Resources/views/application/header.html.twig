<div class="header-main">
    <div class="header-main-content">
        <a class="item" href="/feed">
            <i class="leaf big icon"></i>
        </a>
        <a class="item{% if menu.isFeed == true %} active{% endif %}" href="/feed">Home</a>
        <div class="right">
            {% if isLoggedIn == false %}
                <a class="item{% if menu.isSignup == true %} active{% endif %}" href="/signup">Sign up</a>
                <a class="item{% if menu.isLogin == true %} active{% endif %}" href="/login">Log in</a>
            {% endif %}
            {% if isLoggedIn == true %}
                <a class="item{% if menu.isProfile == true %} active{% endif %}" href="/profile/{{ username }}">
                    <i class="user large icon"></i>
                </a>
            {% endif %}
        </div>
    </div>
</div>