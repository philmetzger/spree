<div class="header-main">
    <div class="header-main-content">
        <a class="item" href="/home">
            <i class="leaf big icon"></i>
        </a>
        <a class="item{% if menu.isHome == true %} active{% endif %}" href="/home">Home</a>
        <div class="right">
            {% if isLoggedIn == false %}
                <a class="item{% if menu.isSignup == true %} active{% endif %}" href="/signup">Sign up</a>
                <a class="item{% if menu.isLogin == true %} active{% endif %}" href="/login">Log in</a>
            {% endif %}
            {% if isLoggedIn == true %}
                <div class="item ui dropdown top left">
                    <span>
                        <i class="user large icon"></i>
                        <i class="dropdown icon"></i>
                    </span>
                    <div class="menu">
                        <a class="item" data-value="drop" href="/profile/{{ username }}">Profile</a>
                        <a class="item" data-value="drop" href="/logout">Log out</a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<noscript>
    <div class="ui red message no-javascript">
        <div class="header">
            This site requires JavaScript to function correctly.
        </div>
        <p>
            To find out how to enable javascript <a href="http://www.enable-javascript.com/" rel="nofollow" target="_blank">click here</a>.
        </p>
    </div>
</noscript>